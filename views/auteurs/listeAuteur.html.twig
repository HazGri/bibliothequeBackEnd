{% extends "base.html.twig" %}
    {% block titre %}
       page affichant les auteurs
    {% endblock titre%}
    {% block contenu %}
          <table class="table text-center" id="tableau-livres">
            <thead id="table_header">
                <tr class="table-dark">
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Nombre de livres</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for auteur in auteurs %}
                <tr>
                    <td class="align-middle"><a href="/auteurs/{{auteur._id}}">{{auteur.prenom}}</a></td>
                    <td class="align-middle">{{auteur.nom}}</td>
                    <td class="align-middle">{{auteur.livres|length}}</td>
                    <td class="align-middle"><a href="/auteurs/modification/{{auteur._id}}" class="btn btn-warning">Modifier</a></td>
                     <td class="align-middle">
                        <form method="POST" action="/auteurs/delete/{{auteur._id}}" onSubmit="return confirm('Voulez vous vraiment supprimer l\'auteur?')">
                           <button class="btn btn-danger" type="submit">Supprimer</button>
                        </form>
                     </td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
                 <button onClick="displayForm()" class="btn btn-success w-100">Ajouter</button>
   <form id="ajoutForm" class="d-none" method="POST" action="">
         <fieldset>
            <legend>Ajout d'un auteur</legend>
            <div class="form-group">
            <label for="titre">Prénom de l'auteur</label>
            <input type="text" class="form-control" id="prenom" name="prenom">
            </div>
            <div class="form-group">
            <label for="titre">Nom de l'auteur</label>
            <input type="text" class="form-control" id="nom" name="nom">
            </div>
            <div class="form-group">
            <label for="pages">Age</label>
            <input type="number" class="form-control" id="age" name="age">
            </div>
            <div class="form-group form-check checkbox">
                <input class="form-check-input" type="checkbox" id="sexe" name="sexe">
                <label class="form-check-label" for="sexe">Homme</label>
            </div>
            <button class="btn btn-primary validerBtn" type="submit">Valider</button>
         </fieldset>
   </form>
   <script src="/javascript/ajoutLivre.js"></script>
    {% endblock contenu%} 